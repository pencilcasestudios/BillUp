<% title t("views.users.new.title") %>

<div class="container">
	<h1><%= yield :title %></h1>

	<div id="sign_up_form">
		<%= form_for(@user, :html => {:class => "form-stacked"} ) do |f| %>
			<fieldset>
				<fieldset>
					<legend><%= t("views.users.new.form.legend.name") %></legend>
					<div class="field clearfix">
				    <%= f.label :name, t("views.users.new.form.label.name") %>
				    <div class="input"><%= f.text_field :name, :class => "xlarge" %></div>
				  </div>
				</fieldset>

				<fieldset>
					<legend><%= t("views.users.new.form.legend.contact_information") %></legend>
				  <div class="field clearfix">
				    <%= f.label :email, t("views.users.new.form.label.email") %>
				    <div class="input"><%= f.text_field :email, :class => "xlarge" %></div>
				  </div>

				  <div class="field clearfix">
				    <%= f.label :cell_phone_number, t("views.users.new.form.label.cell_phone_number") %>
				    <div class="input"><%= f.text_field :cell_phone_number, :class => "xlarge" %></div>
				  </div>
				</fieldset>

				<fieldset>
					<legend><%= t("views.users.new.form.legend.account_information") %></legend>
				  <div class="field clearfix">
				    <%= f.label :username, t("views.users.new.form.label.username") %>
				    <div class="input"><%= f.text_field :username, :class => "xlarge" %></div>
				  </div>

				  <div class="field clearfix">
				    <%= f.label :password, t("views.users.new.form.label.password") %>
				    <div class="input"><%= f.password_field :password, :class => "xlarge" %></div>
				  </div>
				  <div class="field clearfix">
				    <%= f.label :password_confirmation, t("views.users.new.form.label.password_confirmation") %>
				    <div class="input"><%= f.password_field :password_confirmation, :class => "xlarge" %></div>
				  </div>
				</fieldset>

				<fieldset>
					<legend><%= t("views.users.new.form.legend.localisation") %></legend>
				  <div class="field clearfix">
				    <%= f.label :language, t("views.users.new.form.label.language") %>
						<div class="input"><%= f.select :language, { t("views.users.new.form.selector.language.english") => "eng" }, :prompt => true, :class => "xlarge" %></div>
				  </div>

				  <div class="field clearfix">
				    <%= f.label :time_zone, t("views.users.new.form.label.time_zone") %>
				    <div class="input"><%= f.time_zone_select :time_zone, nil, :include_blank => false, :prompt =>true, :class => "xlarge" %></div>
				  </div>
				</fieldset>

				<% if new_or_create_action? %>
					<fieldset>
						<legend><%= t("views.users.new.form.legend.confirmation") %></legend>
					  <div class="field clearfix">
					    <%= f.label :terms_of_use, t("views.users.new.form.label.terms_of_use") %>
					    <div class="input"><%= f.check_box :terms_of_use %> <%= t("views.users.new.copy.accept_terms_of_use") %> <%= link_to t("views.users.new.copy.read_terms_of_use"), terms_path, :class => "xlarge" %></div>
						</div>
					</fieldset>
				<% end %>

			  <div class="actions">
			    <%= f.submit t("views.users.new.form.button.submit"), :class => "btn large primary" %>
			  </div>
			</fieldset>
		<% end %>
	</div><!-- /.sign_up_form -->
</div><!-- /.container -->
