<% title t("views.clients.index.title") %>

<div class="page-header">
	<div class="row">
		<div class="span10">
			<h1><%= yield :title %></h1>
		</div>
		<div class="span2 add">
			<%= link_to t("views.clients.index.buttons.add_a_client"), new_client_path, class:  "btn" %>
		</div>
	</div>
</div>

<table class="condensed-table striped-table">
<% @clients.each do |client| %>
  <tr>
    <td><p><%= link_to client.name, client %></p></td>
  </tr>
<% end %>
</table>

<br />
