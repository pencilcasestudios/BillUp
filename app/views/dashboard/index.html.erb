<% title t("views.dashboard.title") %>
<% sub_title t("views.dashboard.subtitle.s#{ rand 9 }") %>

<div class="page-header">
	<h1><%= yield :title %> <%= yield :sub_title %></h1>
</div>

<div class="row content">
	<% if current_user.organisations.present? %>
	  <div class="span12 main">
			<%= render "user_has_no_organisations" %>
	  </div>
	<% else %>
	  <div class="span12 main">
			<%= render "user_has_no_organisations" %>
	  </div>
	<% end %>

  <div class="span4 sidebar">
		<%= render "sidebar" %>
  </div>
</div>
