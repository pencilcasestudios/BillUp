<% title t("views.welcome.signed_in_home.title") %>

<div class="page-header">
	<h1>
		<%= yield :title %><br />
		<small><%= t("views.welcome.signed_in_home.subtitle.s#{ rand t("views.welcome.signed_in_home.subtitle").size }") %></small>
	</h1>
</div>

<div class="row">
	<div class="span9">
		<% if current_user.organisations.blank? %>
			<%= render "user_has_no_organisations" %>
		<% else %>
			<%= render "user_has_organisations" %>
		<% end %>
	</div>
	<div class="span3 sidebar">
		<p>
			<%= link_to t("views.welcome.signed_in_home._sidebar.links.create_an_organisation"), new_organisation_path %><br />
			<%= link_to t("views.welcome.signed_in_home._sidebar.links.purchase_units"), "purchase units" %><br />
		</p>
	</div>
</div>
