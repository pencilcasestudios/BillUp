<div class="topbar" data-scrollspy="scrollspy">
  <div class="topbar-inner">
		<div class="container-fluid">
			<% if user_signed_in? %>
				<% if @current_organisation.present? %>
					<%= render "switch_to_dropdown_navigation" %>
					<%= link_to truncate(@current_organisation.name, :length => 30), root_path, :class => "brand" %>
					<%= render "invoices_dropdown_navigation" %>
					<%= render "receipts_dropdown_navigation" %>
					<%= render "clients_dropdown_navigation" %>
				<% end %>
			<% else %>
				<%= link_to t("application.name"), root_path, :class => "brand" %>
			<% end %>
      <ul class="nav">
				<% if user_signed_in? %>
				<% else %>
					<li id="tab_tour"><%= link_to t("views.application._navigation.link.tour"), "/#tour" %></li>
					<li id="tab_pricing"><%= link_to t("views.application._navigation.link.pricing"), "/#pricing" %></li>
					<li id="tab_sign_up"><%= link_to t("views.application._navigation.link.sign_up"), sign_up_path %></li>
				<% end %>
			</ul><!-- /nav -->
			<ul class="nav secondary-nav">
				<% if user_signed_in? %>
					<li><%= link_to t("views.application._navigation.links.home"), root_url(:host => request.domain) %></li>
					<%= render "units_dropdown_navigation" %>
					<%= render "user_dropdown_navigation" %>
				<% else %>
	        <li id="tab_sign_in"><%= link_to t("views.application._navigation.link.sign_in"), sign_in_path %></li>
				<% end %>
			</ul><!-- /.nav .secondary-nav -->
		</div><!-- /.container-fluid -->
	</div><!-- /.topboar-inner -->
</div><!-- /.topbar -->
